{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Serve with MCP",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "server",
                "-listen-addr", "0.0.0.0:8081",
                "-mcp-addr", "0.0.0.0:8082"
            ],
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
